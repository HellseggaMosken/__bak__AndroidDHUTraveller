<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/dialog_horizontal_margin"
    >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/round_corner_bg"
    >


    <TextView
        android:id="@+id/qa_speaking"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="30dp"
        android:paddingTop="30dp"
        android:textSize="18sp"
        android:textAlignment="center"
        android:maxLines="8"
        android:ellipsize="end"
        />

    <ProgressBar
        android:id="@+id/qa_progressBar"
        style="@android:style/Widget.DeviceDefault.Light.ProgressBar.Large"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:layout_gravity="center_horizontal"
        />

    <TextView
        android:id="@+id/qa_progressBar_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:paddingTop="5dp"
        android:paddingBottom="30dp"
        android:text="@string/text_listening"
        />

    <TextView
        android:id="@+id/qa_res"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="30dp"
        />

    <View
        android:id="@+id/qa_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider" />

    <TextView
        android:id="@+id/qa_again"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/text_qa_again"
        android:layout_gravity="center_horizontal"
        android:paddingVertical="15dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="@color/colorAccent"
        android:background="?selectableItemBackground"
        />

</LinearLayout>
</FrameLayout>